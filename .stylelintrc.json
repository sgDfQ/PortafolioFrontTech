{
  "extends": "stylelint-config-standard",
  "rules": {
    "no-descending-specificity": null,
    "font-family-no-missing-generic-family-keyword": null,
    "at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["keyframes", "font-face"] }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "scroll-behavior",
          "scroll-margin-top",
          "backdrop-filter",
          "gap",
          "font-display"
        ]
      }
    ]
  }
}
